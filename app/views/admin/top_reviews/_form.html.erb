<div class="form-group">

  <%= f.label :image, 'Foto', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= image_tag(f.object.image.thumb) if f.object.image.present? %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>

</div>

<style>
  .note-editor {
    min-height: 0;
  }
</style>

<div class="form-group">

  <%= f.label :review, 'Recensie', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <div style="border: 1px solid #e5e6e7;">
      <%= f.text_area :review, class: 'summernote' %>
    </div>
  </div>

</div>

<div class="form-group col-sm-10 col-sm-push-2">
  <div class="i-checks">
    <%= f.label :enabled, 'Zichtbaar', class: 'control-label' do %>
        <%= f.check_box :enabled %> <i></i> Zichtbaar
    <% end %>
  </div>
</div>

<div class="hr-line-dashed"></div>
<div class="form-group">
  <div class="col-sm-4 col-sm-offset-2">
    <%= link_to 'Annuleren', admin_top_reviews_path, class: 'btn btn-white' %>
    <%= f.submit 'Opslaan', class: 'btn btn-primary' %>
  </div>
</div>