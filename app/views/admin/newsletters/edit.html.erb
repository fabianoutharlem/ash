<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Nieuwsbrief "<%= @newsletter.title %>" aanpassen</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for admin_root_path %>">Home</a>
      </li>
      <li>
        <%= link_to 'Nieuwsbrieven', admin_newsletters_path %>
      </li>
      <li class="active">
        <strong>Nieuwsbrief "<%= @newsletter.title %>" aanpassen</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-8">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Nieuwsbrief "<%= @newsletter.title %>" aanpassen</h5>
        </div>
        <div class="ibox-content">
          <%= form_for @newsletter, url: admin_newsletter_path(@newsletter), method: :put, html: {class: 'form-horizontal'} do |f| %>
              <%= render 'form', f: f %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Gekozen template</h5>
        </div>
        <div class="ibox-content">
          <%= render 'template_preview', template: @newsletter.newsletter_template %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
    <%= stylesheet_link_tag 'admin/forms' %>
<% end %>

<% content_for :javascript do %>

    <%= javascript_include_tag 'admin/forms' %>

    <script type="text/javascript">


      $(function () {

        $('.i-checks').iCheck({
          checkboxClass: 'icheckbox_square-green',
          radioClass: 'iradio_square-green',
        });

        $('.summernote').summernote();

      });

    </script>

<% end %>


