<style>
  .note-editor {
    min-height: 0;
  }
</style>

<div class="form-group">
  <%= f.label :name, 'Naam', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :menu_itemable, 'Item', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :menu_itemable, grouped_options_for_select(MenuItem.menu_item_records, selected: {class: f.object.menu_itemable_type, id: f.object.menu_itemable_id}.to_json), class: 'form-control' %>
  </div>
</div>

<div class="hr-line-dashed"></div>

<div class="form-group">
  <div class="col-sm-10 col-sm-push-2">
    <%= link_to 'Annuleren', admin_menu_menu_items_path(@menu_item.menu || params[:menu_id]), class: 'btn btn-white' %>
    <%= f.submit 'Opslaan', class: 'btn btn-primary' %>
  </div>
</div>