<section class="main_slider">
  <div class="wrapper">
    <div class="container-fluid">
      <div class="my-slider">
        <ul>
          <% cache ['main-slider', @slider, @slider.active_slides] do %>
              <% @slider.active_slides.each do |slide| %>
                  <%= render ('admin/slides/templates/' + slide.slide_template.template), slide_values: slide.template_variables %>
              <% end %>
          <% end %>
        </ul>
      </div>

      <div class='marquee'>
        <ul>
          <% MarqueeItem.all.each do |item| %>
              <li>
                <a href="<%= item.link %>"><%= image_tag 'ticker_vink.png' %><%= item.title %></a>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>