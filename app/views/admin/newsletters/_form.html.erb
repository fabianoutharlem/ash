<style>
  .note-editor {
    min-height: 0;
  }
</style>

<%= f.hidden_field :newsletter_template_id %>

<div class="form-group">
  <%= f.label :title, 'Titel', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :title, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :subject, 'Onderwerp', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :subject, class: 'form-control' %>
  </div>
</div>

<div class="hr-line-dashed"></div>


<%= f.fields_for :newsletter_values, f.object.newsletter_values, class: 'col-sm-12' do |ff| %>
  <%= render 'admin/newsletters/newsletter_value_fields', f: ff %>
<% end %>


<div class="hr-line-dashed"></div>

<div class="form-group">
  <div class="col-sm-10 col-sm-push-2">
    <%= link_to 'Annuleren', admin_newsletters_path, class: 'btn btn-white' %>
    <%= f.submit 'Opslaan', class: 'btn btn-primary' %>
  </div>
</div>