<div class="form-group">

  <%= f.label :title, 'Titel', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :title, class: 'form-control' %>
  </div>

</div>

<div class="form-group">

  <%= f.label :sub_title, 'Onder titel', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :sub_title, class: 'form-control' %>
  </div>

</div>

<style>
  .note-editor {
    min-height: 0;
  }
</style>

<div class="form-group">

  <%= f.label :description, 'Beschrijving', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <div style="border: 1px solid #e5e6e7;">
      <%= f.text_area :description, class: 'summernote' %>
    </div>
  </div>

</div>

<div class="hr-line-dashed"></div>
<div class="form-group">
  <div class="col-sm-4 col-sm-offset-2">
    <%= link_to 'Annuleren', admin_vacancies_path, class: 'btn btn-white' %>
    <%= f.submit 'Opslaan', class: 'btn btn-primary' %>
  </div>
</div>