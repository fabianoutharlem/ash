<%= render 'main_slider' %>

<%= render 'layouts/search' %>

<%= render 'layouts/newsletter' %>

<%= render 'carousel' %>

<section class="like_ons">
  <div class="wrapper">
    <div class="container-fluid">

      <div class="left">
        <h3>Verkoop uw auto aan Auto Service Haarlem</h3>
        <p><span>Stap 1</span> - Kenteken & tellerstand van uw voertuig.</p>
        <p>&nbsp;<span>Stap 2</span> - Vul uw n.a.w. gegevens in.</p>

        <form class="sell_car">
          <input type="text" placeholder="Vul hier je kenteken in">
          <input type="text" placeholder="Vul hier je kilometerstand in">
          <button class="orange_btn">Verstuur aanvraag</button>
        </form>
      </div>

      <div class="right">

        <a href="http://www.facebook.nl" class="facebook social_media">
          <i></i>
          <p>Like ons</p>
          <%= image_tag 'plus_icon.png' %>
        </a>

        <a href="http://www.instagram.nl" class="instagram social_media">
          <i></i>
          <p>Volg ons</p>
          <%= image_tag 'plus_icon.png' %>
        </a>
      </div>
    </div>
  </div>
</section>

<section class="mogelijkheden">
  <div class="wrapper">
    <div class="container-fluid content_container" style="background: url('<%= image_url 'bg_mogelijkheden.jpg' %>') no-repeat center; background-size: cover">

      <h2>Wilt uw deze auto financieren?</h2>
      <h3>Bekijk hier de mogelijkheden!</h3>

      <%= render 'shared/finance_circles' %>

    </div>
  </div>
</section>

<section class="actie">
  <div class="wrapper">
    <div class="container-fluid">

      <article class="expectaion _actie">
        <%= image_tag 'logo_ash2.png' %>
        <h5><%= phrase 'Wat kan je allemaal van ons verwachten' %></h5>
        <p><%= phrase 'Meer dan u gewend bent' %></p>
      </article>

      <article class="vw_banner _actie" style="background: url('<%= image_url Setting.get('home_action_img') %>') no-repeat center; background-size: calc(100% * 0.8);">
        <h5><%= phrase 'home_actie_titel' %></h5>
        <p><%= phrase 'home_actie_sub_titel' %></p>
        <%= link_to phrase('Bekijk deze actie'), page_path(Setting.get('home_action_page')), class: 'orange_btn' %>
      </article>
    </div>
  </div>
</section>