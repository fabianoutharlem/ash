<style>
  .note-editor {
    min-height: 0;
  }
</style>

<%= f.hidden_field :slide_template_id %>

<div class="form-group">
  <%= f.label :name, 'Naam', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-10 col-sm-push-2">
    <div class="i-checks">
      <%= f.label :enabled, 'Zichtbaar', class: 'control-label' do %>
          <%= f.check_box :enabled %> <i></i> Zichtbaar
      <% end %>
    </div>
  </div>
</div>

<div class="hr-line-dashed"></div>

<%= f.fields_for :slide_values, f.object.slide_values, class: 'col-sm-12' do |ff| %>
  <%= render 'admin/slides/slide_value_fields', f: ff %>
<% end %>

<div class="hr-line-dashed"></div>

<div class="form-group">
  <div class="col-sm-10 col-sm-push-2">
    <%= link_to 'Annuleren', admin_slider_slides_path(@slide.slider || params[:slider_id]), class: 'btn btn-white' %>
    <%= f.submit 'Opslaan', class: 'btn btn-primary' %>
  </div>
</div>