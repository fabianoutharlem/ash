<div class="form-group">
  <%= f.label :title, 'Titel', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :title, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :slug, 'Slug', class: 'col-sm-2 control-label' %>
