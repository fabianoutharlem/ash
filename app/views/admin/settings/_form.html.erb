<style>
  .note-editor {
    min-height: 0;
  }
</style>

<div class="form-group">
  <%= f.label :name, 'Setting', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :name, class: 'form-control', disabled: true %>
  </div>
</div>

<div class="hr-line-dashed"></div>

<%= render 'admin/settings/setting_values/' + f.object.partial_name, {f: f} %>

<div class="hr-line-dashed"></div>

<div class="form-group">
  <div class="col-sm-10 col-sm-push-2">
    <%= link_to 'Annuleren', admin_settings_path, class: 'btn btn-white' %>
    <%= f.submit 'Opslaan', class: 'btn btn-primary' %>
  </div>
</div>